<h2>Edit <%= @car.make %> <%= @car.model %></h2>
<form action="/cars/<%= @id %>" method="POST">

  <div class="wrapper">

    <div class="form-element">
      <label for="car-make">Make</label>
      <input type="text" name="make" id="car-make" value="<%= @car.make %>">
    </div>

    <div class="form-element">
      <label for="car-model">Model</label>
      <input type="text" name="model" id="car-model" value="<%= @car.model %>">
    </div>

    <div class="form-element">
      <label for="style-select">Car Style</label>
      <select name="style" id="style-select">
        <option value="Sports">Sports</option>
        <option value="Super">Super</option>
        <option value="Convertible">Convertible</option>
        <option value="SUV">SUV</option>
        <option value="Estate">Estate</option>
        <option value="Saloon">Saloon</option>
        <option value="Electric">Electric</option>
        <option value="Hot-hatch">Hot-Hatchback</option>
        <option value="Hatch">Hatch</option>
      </select>
    </div>

    <div class="form-element">
      <label for="car-price">Price</label>
      <input type="number" name="price" value="<%= @car.price %>" id="car-price">
    </div>

    <div class="form-element">
      <label for="car-image">Add a picture URL</label>
      <input type="text" name="image" value="<%= @car.image %>" id="car-image">
    </div>

  </div>
  <br>
  <div class="submit">
    <input type="submit" value="Update Car"/>
  </div>

  <br>
  <div class="submit">
    <input type="submit" value="Delete Car"/>
  </div>

</form>
