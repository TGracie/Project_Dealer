<form action="/cars" method="post">

  <label for="shop">Dealership</label>
  <input type="text" name="make" id="car-make"/>
 <br>
  <label for="make">Make</label>
  <input type="text" name="make" id="car-make"/>

  <br>

    <label for="model">Model</label>
    <input type="text" name="make" id="car-model">

  <br>

    <label for="style-select">Choose Car Style</label>
