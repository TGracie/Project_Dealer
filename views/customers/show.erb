<h2>Customer <%= customer.id %> Details</h2>

<table>
  <tr>
    <th>ID</th>
    <th>Customer Name</th>
    <th>Email</th>
    <th>Previous Brand</th>
    <th>Budget</th>
  </tr>
  <tr>
    <td><%= @customer.id %></td>
    <td><%= @customer.name %></td>
    <td><%= @customer.email %></td>
    <td><%= @customer.previous_brand %></td>
    <td><%= @customer.budget %></td>
  </tr>
</table>
<br>
<a href="/customers/<%= @customer.id %>/edit">Edit Customer Details</a>
<br>
<form class="" action="/customers/<%= @customer.id %>/delete" method="post">
  <input type="submit" value="Delete Customer">
</form>
